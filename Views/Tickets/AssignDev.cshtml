@model CrucibleBugTracker.Models.Ticket

@{
    ViewData["Title"] = "Assign Project Manager";
}
<div class="d-flex justify-content-center mt-5 flex-column align-items-center">
    <h3 class="my-5">Assign Developer</h3>
    <div class="card">
        <div class="card-header">
            <div class="card-title">@Model.Title</div>
        </div>
        <div class="card-body">
            <form asp-action="AssignDev" method="post" class="d-flex flex-column">
                <input type="hidden" asp-for="@Model.Id" />
                <select asp-items="@ViewBag.DeveloperUserId" asp-for="@Model.DeveloperUserId">
                    <option value="@null">Unassigned</option>
                </select>
                <button type="submit" class="btn btn-primary my-3">Save</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}