                <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" role="tab" asp-page="./TwoFactorAuthentication">
                    Two-factor Authentication
                </a>
                <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" role="tab" asp-page="./PersonalData">
